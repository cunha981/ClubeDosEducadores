@model ViewModel.UsuarioVMs.UsuarioCadastrarVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/assets/img/kbca-cida.ico" />
    <title>Cadastre-se</title>
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body class="bg-chalkboard">
    <div class="container">
        <div class="img-name-w m-t-1 m-b-1"></div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>  Novo usuário ? Registre-se </strong>
                    </div>
                    @Html.ShowAlert()
                    <div class="panel-body">
                        <form role="form" method="post">
                            @Html.AntiForgeryToken()
                            <br />
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="Nome completo"><i class="fa fa-circle-o-notch"></i></span>
                                    @Html.TextBoxFor(a => a.Nome, new { @class = "form-control", placeholder = "Nome completo"})
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.Nome)
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="Cargo"><i class="fa fa-tag"></i></span>
                                    @Html.DropDownListFor(a => a.CargoId, (SelectList)ViewBag.Cargos, "Cargo", new { @class = "form-control" })
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.CargoId)
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="E-mail">@@</span>
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "E-mail" })
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.Email)
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="Senha"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(a => a.Senha, new { @class = "form-control", placeholder = "Digite uma senha" })
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.Senha)
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="Digite a senha novamente"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(a => a.ReSenha, new { @class = "form-control", placeholder = "Repita a senha" })
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.ReSenha)
                            </div>
                            <div class="g-recaptcha m-l-2 m-y-3" data-sitekey="6LcImRQUAAAAAGtmFS1L2Hc56w--RvSSXBiF5mzc"></div>
                            <button type="submit" class="btn btn-success">Cadastrar</button>
                            <hr />
                            Já tem cadastro ?  <a href="~/Auth/Autenticar">Entrar</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="footer chalkboard"></div>
    <script src="~/assets/js/jquery-1.10.2.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.metisMenu.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/domains/default.js"></script>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        })

        function submit() {
            $('form').submit();
        }
    </script>
</body>
</html>
