@model ViewModel.UsuarioVMs.AdminLoginVM

@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/assets/img/kbca-cida.ico" />
    <title>Autenticação</title>
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <link href="~/assets/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/assets/css/jquery-ui.structure.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="img-name-w m-t-3 m-b-3"></div>
        <div class="row ">

            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>   Digite seu e-mail e senha para entrar </strong>
                    </div>
                    @Html.ShowAlert()
                    <div class="panel-body">
                        <form role="form" action="~/Admin/Auth/Autenticar" method="post">
                            @Html.AntiForgeryToken()
                            <br>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="E-mail"><i class="fa fa-tag"></i></span>
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "E-mail" })
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.Email)
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" data-toggle="tooltip" title="Senha"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(a => a.Senha, new { @class = "form-control", placeholder = "Senha" })
                                </div>
                                @Html.BootstrapValidationMessageFor(a => a.Senha)
                            </div>
                            <button type="button" id="btn-form" class="btn btn-primary ">Entrar</button>
                        </form>
                    </div>

                </div>
            </div>


        </div>
    </div>
    <div class="background-content" id="map"></div>
    <div class="footer chalkboard"></div>
    <script src="~/assets/js/jquery-1.10.2.js"></script>
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.metisMenu.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/domains/default.js"></script>
    <script src="~/assets/js/domains/login.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqs0t9Z-3RLmsPc8uoWrMEOP2PVMICHA4&signed_in=true&callback=initMap"></script>
</body>
</html>

